<div class="row">
  <div class="col-md-10">
    <h1><%= @store.name %></h1>
  </div>
  <div class="col-md-2">
    <a href="/stores/<%= @store.id %>/edit"><span class="btn btn-warning">Edit</span></a>
  </div>
</div>
<div>
  <% if @store.brands.any? %>
    <h2>Here are your current brands:</h2>
    <ul>
      <% @store.brands.each do |brand| %>
      <li><%= brand.name %>: $<%="%.2f" % brand.price %></li>
      <% end %>
    </ul>
  <% else %>
    <h2>There are currently no brands for this store.</h2>
  <% end %>
</div>
<a href="/"><span class="btn btn-primary">Home Page</span></a>
